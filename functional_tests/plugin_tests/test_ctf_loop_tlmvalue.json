{
    "test_number": "Cfs-Control-Flow-Plugin-Test-with-VariableFromTlm",
    "test_name": "Basic CFE-6-7 CFS Control-Flow Plugin Test with SetUserVariableFromTlm",
    "requirements": {
        "MyRequirement": "N/A"
    },
    "description": "Basic CTF Example Script Showing Simple Control Flow",
    "owner": "CTF",
    "test_setup": "Script will start CFE-6-7, execute loop instructions",
    "ctf_options": {
        "verify_timeout": 4
    },
    "import": {},
    "tests": [
        {
            "case_number": "CFE-6-7-Control-Flow-Test-1",
            "description": "Start CFS, Loop with condition from tlm value",
            "instructions": [
                {
                    "instruction": "StartCfs",
                    "data": {
                        "target": ""
                    },
                    "wait": 1
                },
                {
                    "instruction": "EnableCfsOutput",
                    "data": {
                        "target": ""
                    },
                    "wait": 1,
                    "description": "Need this to enable the telemetry thread. Enable Output counts as 1 TO cmd"
                },
                {
                    "instruction": "SetUserVariableFromTlm",
                    "data": {
                        "variable_name": "tlm_usCmdCnt",
                        "mid": "TO_HK_TLM_MID",
                        "tlm_variable": "usCmdCnt"
                    },
                    "wait": 1
                },
                {
                    "instruction": "SetUserVariable",
                    "data": {
                        "variable_name": "my_var",
                        "operator": "=",
                        "value": 0
                    },
                    "wait": 1
                },
                {
                    "instruction": "BeginLoop",
                    "data": {
                        "label": "LOOP_1",
                        "conditions": [
                            {"variable": "my_var", "compare": "<", "value": 20},
                            {"variable": "tlm_usCmdCnt", "compare": "<", "value": 7}
                        ]
                    },
                    "wait": 1
                },
                {
                    "instruction": "SetUserVariable",
                    "data": {
                        "variable_name": "my_var",
                        "operator": "+",
                        "value": 1
                    },
                    "wait": 0.1
                },
                {
                    "instruction": "SendCfsCommand",
                    "data": {
                        "target": "",
                        "mid": "TO_CMD_MID",
                        "cc": "TO_NOOP_CC",
                        "args": {}
                    },
                    "wait": 1
                },
                {
                    "instruction": "SetUserVariableFromTlm",
                    "data": {
                        "variable_name": "tlm_usCmdCnt",
                        "mid": "TO_HK_TLM_MID",
                        "tlm_variable": "usCmdCnt"
                    },
                    "wait": 1
                },
                {
                    "instruction": "CheckTlmValue",
                    "data": {
                        "target": "",
                        "mid": "TO_HK_TLM_MID",
                        "args": [
                            {
                                "compare": "<=",
                                "variable": "usCmdCnt",
                                "value": [ 20 ]
                            }
                        ]
                    },
                    "wait": 1
                },
                {
                    "instruction": "EndLoop",
                    "data": {
                        "label": "LOOP_1"
                    },
                    "wait": 1
                },
                {
                    "instruction": "ShutdownCfs",
                    "data": {
                        "target": ""
                    },
                    "wait": 1
                }
            ]
        }

    ]
}
