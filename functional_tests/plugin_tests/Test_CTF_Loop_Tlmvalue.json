{
    "test_script_number": "CTF-Control-Flow-Plugin-Test-with-VariableFromTlm",
    "test_script_name": "Test_CTF_Loop_Tlmvalue.json",
    "owner": "CTF",
    "description": "CTF Example Script Showing Control Flow Loop with Variables From Tlm",
    "requirements": {
        "MyRequirement": "N/A"
    },
    "ctf_options": {
        "verify_timeout": 4
    },
    "test_setup": "",
    "import": {},
    "tests": [
        {
            "test_number": "CTF-Control-Flow-Plugin-Test-with-VariableFromTlm-1",
            "description": "Loop with condition from tlm payload value",
            "instructions": [
                {
                    "instruction": "SetUserVariableFromTlm",
                    "data": {
                        "target": "tgt1",
                        "mid": "TO_HK_TLM_MID",
                        "variable_name": "tlm_usCmdCnt",
                        "tlm_variable": "usCmdCnt",
                        "variable_type": "int"
                    },
                    "wait": 2
                },
                {
                    "instruction": "SetUserVariable",
                    "data": {
                        "variable_name": "my_var",
                        "operator": "=",
                        "value": 0,
                        "variable_type": "int"
                    }
                },
                {
                    "instruction": "SetUserVariable",
                    "data": {
                        "variable_name": "target_name",
                        "operator": "=",
                        "value": "tgt1",
                        "variable_type": "string"
                    }
                },
                {
                    "instruction": "BeginLoop",
                    "data": {
                        "label": "LOOP_1",
                        "conditions": [
                            {
                                "variable": "my_var",
                                "compare": "<",
                                "value": 20
                            },
                            {
                                "variable": "tlm_usCmdCnt",
                                "compare": "<",
                                "value": 7
                            }
                        ]
                    },
                    "wait": 1
                },
                {
                    "instruction": "SetUserVariable",
                    "data": {
                        "variable_name": "my_var",
                        "operator": "+",
                        "value": 1
                    },
                    "wait": 0.1
                },
                {
                    "instruction": "SendCfsCommand",
                    "data": {
                        "target": "tgt1",
                        "mid": "TO_CMD_MID",
                        "cc": "TO_NOOP_CC",
                        "args": {}
                    },
                    "wait": 1
                },
                {
                    "instruction": "SetUserVariableFromTlm",
                    "data": {
                        "target": "$target_name$",
                        "mid": "TO_HK_TLM_MID",
                        "variable_name": "tlm_usCmdCnt",
                        "tlm_variable": "usCmdCnt",
                        "variable_type": "int"
                    },
                    "wait": 1
                },
                {
                    "instruction": "CheckTlmValue",
                    "data": {
                        "target": "tgt1",
                        "mid": "TO_HK_TLM_MID",
                        "args": [
                            {
                                "compare": "<=",
                                "variable": "usCmdCnt",
                                "value": [
                                    20
                                ]
                            }
                        ]
                    },
                    "wait": 1
                },
                {
                    "instruction": "EndLoop",
                    "data": {
                        "label": "LOOP_1"
                    },
                    "wait": 1
                }
            ]
        },
        {
            "test_number": "CTF-Control-Flow-Plugin-Test-with-VariableFromTlm-2",
            "description": "Loop with condition from tlm header value",
            "instructions": [
                {
                    "instruction": "SetUserVariable",
                    "data": {
                        "variable_name": "to_seq_cnt",
                        "operator": "=",
                        "value": 0,
                        "variable_type": "int"
                    }
                },
                {
                    "instruction": "SetUserVariable",
                    "data": {
                        "variable_name": "header_sequence_count",
                        "operator": "=",
                        "value": "sequence_count",
                        "variable_type": "string"
                    }
                },
                {
                    "instruction": "BeginLoop",
                    "data": {
                        "label": "LOOP_1",
                        "conditions": [
                            {
                                "variable": "to_seq_cnt",
                                "compare": "<",
                                "value": 50
                            }
                        ]
                    },
                    "wait": 1
                },
                {
                    "instruction": "SetUserVariableFromTlmHeader",
                    "data": {
                        "target": "tgt1",
                        "mid": "TO_HK_TLM_MID",
                        "variable_name": "to_seq_cnt",
                        "header_variable": "pheader.$header_sequence_count$",
                        "variable_type": "int"
                    }
                },
                {
                    "instruction": "SendCfsCommand",
                    "data": {
                        "target": "tgt1",
                        "mid": "TO_SEND_HK_MID",
                        "cc": "",
                        "args": []
                    }
                },
                {
                    "instruction": "EndLoop",
                    "data": {
                        "label": "LOOP_1"
                    }
                },
                {
                    "instruction": "CheckUserVariable",
                    "data": {
                        "variable_name": "to_seq_cnt",
                        "operator": ">=",
                        "value": 50
                    }
                }
            ]
        }
    ]
}
