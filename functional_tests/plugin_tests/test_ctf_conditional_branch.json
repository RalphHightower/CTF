        {
            "case_number": "CFE-6-7-Cfs-Conditional-Branch-Test-3",
            "description": "Execute nested conditional branch instructions",
            "instructions": [
                {
                    "instruction": "SetUserVariable",
                    "data": {
                        "variable_name": "my_var",
                        "operator": "=",
                        "value": 4
                    },
                    "wait": 0
                },
                {
                    "instruction": "IfCondition",
